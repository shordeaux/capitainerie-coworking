{% extends '::base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
    {% stylesheets
    'assets/plugins/fancybox/source/jquery.fancybox.css'
    filter='cssrewrite,cssimport,?yui_css' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
    {% javascripts
	'assets/plugins/fancybox/source/jquery.fancybox.pack.js'
    filter='?yui_js'%}

    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

	<script type="text/javascript">
    jQuery(document).ready(function() {
        App.initFancybox();
    });
</script>

{% endblock %}


{% block body %}

<!--=== Breadcrumbs ===-->
<div class="breadcrumbs margin-bottom-40">
    <div class="container">
        <h1 class="pull-left">Le port</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="{{ path('homepage') }}">Accueil</a></li>
            <li><a href="{{ path('place') }}">Le lieu</a></li>
            <li class="active">Le port</li>
        </ul>
    </div>
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->

<div class="container">
<div class="gallery-page">

        <div class="row margin-bottom-20">
            <div class="col-md-4 col-sm-6">
                <a class="thumbnail fancybox-button zoomer" data-rel="fancybox-button" title="Une pièce pour la détente, l'échange et le travail." href="{{ asset('/bundles/capitaineriecore/images/lieu/bureau.png') }}">
                    <span class="overlay-zoom">
                        <img alt="" src="{{( '/bundles/capitaineriecore/images/lieu/bureau.png'| apply_filter('moyenne')) }}" class="img-responsive">
                        <div class="zoom-icon"></div>
                    </span>
                </a>
            </div>
        </div>

        <hr class="margin-bottom-30">
        <h2>Découvrez nos autres espaces</h2>
        <div class="row margin-bottom-20">
            <div class="col-md-4 col-sm-6">
                <img class="img-responsive" src="{{( '/bundles/capitaineriecore/images/lieu/open_space.png'| apply_filter('small')) }}" alt="">
                <h2>Le sous marin</h2>
                <p>L'open space de type Loft pour travailler de façon studieuse.</p>
            </div>
            <div class="col-md-4 col-sm-6">
                <img class="img-responsive" src="{{( '/bundles/capitaineriecore/images/lieu/salle_de_reunion.png'| apply_filter('small')) }}" alt="">
                <h2>La salle de réunion</h2>
                <p>Pour recevoir des clients, faire un point en équipe au calme ou faire une présentation</p>
            </div>
            <div class="col-md-4 col-sm-6">
                <img class="img-responsive" src="{{( '/bundles/capitaineriecore/images/lieu/espace_repos.png'| apply_filter('small')) }}" alt="">
                <h2>Le bar</h2>
                <p>Pour recharger les batteries et échanger autour d'un café.</p>
            </div>
        </div>
    </div>
    <!-- End Service Blcoks -->


    </div><!--/gallery-page-->
</div>

{% endblock %}